
{
  "manifest_version": 3,
  "name": "Neuro-Sense: Context Decoder",
  "version": "1.0.0",
  "description": "Magical context decoder for WhatsApp, Instagram, and Messenger.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://www.instagram.com/*",
    "https://www.messenger.com/*",
    "https://generativelanguage.googleapis.com/*",
    "*://*.neuro-sense.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "chrome/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://www.instagram.com/*",
        "https://www.messenger.com/*",
        "*://*.neuro-sense.com/*",
        "http://localhost/*"
      ],
      "js": ["chrome/content.tsx"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "chrome/popup.html",
    "default_title": "Neuro-Sense Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
